<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.kaz_furniture.mahjongChat.fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/navigation_home_to_second"
            app:destination="@id/navigation_home"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_second"
        android:name="com.kaz_furniture.mahjongChat.fragment.SecondFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_second" />

    <fragment
        android:id="@+id/navigation_third"
        android:name="com.kaz_furniture.mahjongChat.fragment.ThirdFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_third" />
</navigation>