<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="userId"
            type="String" />

        <variable
            name="buttonText"
            type="String" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/userIcon"
                    app:userIcon="@{userId}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userButton"
                    android:text="@{buttonText}"
                    tools:text="@string/profileEdit"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/userIcon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/followerNumber"
                    tools:text="24"
                    app:layout_constraintStart_toStartOf="@id/explanation"
                    app:layout_constraintTop_toTopOf="@id/followerText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/followerText"
                    android:text="@string/follower"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@id/followerNumber"
                    app:layout_constraintTop_toBottomOf="@id/userButton"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/followingNumber"
                    tools:text="24"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/followerText"
                    app:layout_constraintTop_toTopOf="@id/followerText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/followingText"
                    android:text="@string/followNow"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/followingNumber"
                    app:layout_constraintTop_toTopOf="@id/followerText"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/explanation"
                    app:layout_constraintTop_toBottomOf="@id/followerText"
                    app:layout_constraintStart_toEndOf="@id/userIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_gravity="start"
                    android:text="@string/explanation"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.kaz_furniture.mahjongChat.view.PostView
                android:id="@+id/postView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>