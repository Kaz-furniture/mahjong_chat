<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="post"
            type="com.kaz_furniture.mahjongChat.data.Post" />

        <variable
            name="userId"
            type="String" />

        <variable
            name="commentContent"
            type="androidx.lifecycle.MutableLiveData&lt;String>" />

        <variable
            name="canSubmit"
            type="Boolean" />

        <variable
            name="starNumber"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/commentEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    tools:src="@drawable/m1"
                    android:layout_marginTop="4dp"
                    app:userIcon="@{userId}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/userIcon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userName"
                    android:text="@string/noImage"
                    android:textSize="18sp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/userIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/explanation"
                    app:layout_scrollFlags="enterAlwaysCollapsed"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:id="@+id/more"
                    android:layout_marginEnd="12dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_baseline_more_vert_24"
                    app:layout_constraintBottom_toTopOf="@id/explanation"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/darkStar"
                    android:layout_marginEnd="12dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_baseline_star_24"
                    app:layout_constraintBottom_toTopOf="@id/explanation"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/lightStar"
                    app:tint="#ffd700"
                    android:visibility="gone"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_baseline_star_24"
                    app:layout_constraintBottom_toTopOf="@id/explanation"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/explanation"
                    android:id="@+id/explanation"
                    app:layout_constraintTop_toBottomOf="@id/userIcon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/starNumberText"
                    android:text="@string/starNumber"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintEnd_toStartOf="@id/starNumberNumber"
                    app:layout_constraintTop_toTopOf="@id/createdTime"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/starNumberNumber"
                    tools:text="24"
                    android:text="@{starNumber}"
                    android:layout_marginEnd="18dp"
                    app:layout_constraintEnd_toStartOf="@id/createdTime"
                    app:layout_constraintTop_toTopOf="@id/createdTime"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/createdTime"
                    tools:text="@string/time1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/explanation"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/postImageView"
                app:postImage="@{post}"
                android:scaleType="centerCrop"
                android:layout_marginTop="4dp"
                android:contentDescription="@string/postImage"
                tools:src="@drawable/screenshot_20201213_235035"/>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.kaz_furniture.mahjongChat.view.ChoicesCommentsView
                android:id="@+id/choiceCommentView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/commentEditText"
        android:hint="@string/commentInput"
        android:text="@={commentContent}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/submitButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        app:layout_constraintStart_toEndOf="@id/commentEditText"
        app:layout_constraintEnd_toEndOf="parent"
        android:enabled="@{canSubmit}"
        app:layout_constraintTop_toTopOf="@id/commentEditText"
        android:text="@string/submit"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
