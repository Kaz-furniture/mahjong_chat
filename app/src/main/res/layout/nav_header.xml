<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="152dp"
    android:paddingTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/headerUserIconImage"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        tools:src="@drawable/ic_baseline_email_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/headerUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/userName"
        app:layout_constraintTop_toTopOf="@id/headerUserIconImage"
        app:layout_constraintBottom_toBottomOf="@id/headerUserIconImage"
        app:layout_constraintStart_toEndOf="@id/headerUserIconImage"
        android:textSize="18sp"
        android:layout_marginStart="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>