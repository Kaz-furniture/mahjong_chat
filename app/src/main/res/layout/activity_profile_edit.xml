<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="name"
            type="androidx.lifecycle.MutableLiveData&lt;String>" />

        <variable
            name="introduction"
            type="androidx.lifecycle.MutableLiveData&lt;String>" />

        <variable
            name="canSubmit"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/profileImageLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            android:text="プロフィール画像変更"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/profileImageSelect"
            android:text="@string/selectIconImage"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/profileImageLabel"
            app:layout_constraintStart_toStartOf="parent"/>

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/profileImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profileImageLabel"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            tools:src="@drawable/screenshot_20201213_235035"/> -->

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="152dp"
            android:layout_height="152dp"
            android:id="@+id/roundedImageView"
            android:scaleType="centerInside"
            app:riv_corner_radius="30dip"
            app:riv_border_width="2dip"
            app:layout_constraintTop_toTopOf="@id/profileImageLabel"
            app:layout_constraintStart_toEndOf="@id/profileImageSelect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/presentName"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noImageTextView"
            app:layout_constraintStart_toEndOf="@id/profileImageSelect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profileImageLabel"
            app:layout_constraintBottom_toTopOf="@id/presentName"
            android:text="@string/noImage"
            android:textSize="28sp"/>


        <TextView
            android:id="@+id/userNameEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="24dp"
            android:text="ユーザー名変更"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileImageSelect"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/presentName"
            tools:text="PRESENT_NAME"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/userNameEdit"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/userNameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:inputType="text"
            android:text="@={name}"
            android:autofillHints="@string/userName2"
            android:hint="新しいユーザー名を入力"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/presentName" />

        <TextView
            android:id="@+id/introductionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="自己紹介変更"
            android:textSize="16sp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNameInput" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/presentIntroduction"
            tools:text="PRESENT_INTRODUCTION"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/introductionLabel"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/introductionInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:maxLength="128"
            android:text="@={introduction}"
            android:hint="新しい自己紹介を入力"
            android:autofillHints="@string/emailInput"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/presentIntroduction" />

        <TextView
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:enabled="@{canSubmit}"
            android:text="@string/register"
            android:textSize="24sp"
            android:gravity="center"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="-2.0"
            android:background="#0055ff"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/introductionInput" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>