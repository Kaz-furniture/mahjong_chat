<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="name"
            type="androidx.lifecycle.MutableLiveData&lt;String>" />

        <variable
            name="introduction"
            type="androidx.lifecycle.MutableLiveData&lt;String>" />

        <variable
            name="canSubmit"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/profileImageLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:text="@string/profileImageEdit"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/profileImageSelect"
            android:text="@string/selectIconImage"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/profileImageLabel"
            app:layout_constraintStart_toStartOf="parent"/>

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/profileImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profileImageLabel"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            tools:src="@drawable/screenshot_20201213_235035"/> -->

        <ImageView
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:id="@+id/roundedImageView"
            android:scaleType="centerCrop"
            app:riv_border_width="2dip"
            app:layout_constraintTop_toTopOf="@id/profileImageLabel"
            app:layout_constraintStart_toEndOf="@id/profileImageSelect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/userNameEdit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noImageTextView"
            app:layout_constraintStart_toEndOf="@id/profileImageSelect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profileImageLabel"
            app:layout_constraintBottom_toTopOf="@id/userNameEdit"
            android:text="@string/noImage"
            android:textSize="28sp"/>


        <TextView
            android:id="@+id/userNameEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="12dp"
            android:text="@string/userNameEdit"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileImageSelect"/>

        <EditText
            android:id="@+id/userNameInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:inputType="text"
            android:text="@={name}"
            android:autofillHints="@string/userName2"
            android:hint="@string/userNameInput"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNameEdit" />

        <TextView
            android:id="@+id/introductionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/introductionEdit"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNameInput" />

        <EditText
            android:id="@+id/introductionInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:maxLength="128"
            android:text="@={introduction}"
            android:hint="@string/introductionInput"
            android:autofillHints="@string/emailInput"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/introductionLabel" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:enabled="@{canSubmit}"
            android:text="@string/register"
            android:textSize="20sp"
            android:gravity="center"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="-2.0"
            android:background="#0055ff"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/introductionInput" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_circular"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@android:style/Widget.ProgressBar.Large"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>