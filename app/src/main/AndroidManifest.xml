<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaz_furniture.mahjongChat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".MahjongChatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name=".activity.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activity.PostActivity"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity android:name=".activity.ProfileActivity"
            android:parentActivityName=".activity.MainActivity"/>
        <activity android:name=".activity.DMDetailActivity"
            android:parentActivityName=".activity.MainActivity"/>
        <activity android:name=".activity.PostDetailActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:parentActivityName=".activity.MainActivity"/>
        <activity android:name=".activity.PasswordForgetActivity"/>
        <activity android:name=".activity.ProfileEditActivity"
            android:parentActivityName=".activity.MainActivity"/>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.CreateAccountActivity" />
        <activity android:name=".activity.FavoritePostsActivity" />
        <activity android:name=".activity.PostEditActivity"
            android:parentActivityName=".activity.PostDetailActivity"/>
        <activity android:name=".activity.FollowDisplayActivity"
            android:parentActivityName=".activity.ProfileActivity"/>
        <service android:name=".MyFirebaseMessagingService"
            android:exported="false"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>